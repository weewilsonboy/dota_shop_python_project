{% extends 'base.jinja' %}
{% block content %}
    <h1>Heroes</h1>
    {% for hero in heroes %}
        <h2>{{ hero.name }}</h2>
        <p>{{hero.gold}}</p>
        <br>
        {% for courier in couriers %}
            {% if hero.id == courier.hero_id and courier.sold == false %}
                <a href="/sale/{{courier.id}}"><img src="{{courier.item.image_locator}}" alt="an item this hero owns"></a>
            {% endif %}
        {% endfor %}
    {% endfor %}
{% endblock content %}